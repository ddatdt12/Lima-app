<Window  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
         x:Class="LibraryManagement.Views.ImportBook.ImportBookWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:local="clr-namespace:LibraryManagement.Views.ImportBook"
         mc:Ignorable="d"
         Height="600"
         Width="608"
         Background="Transparent"
         WindowStyle="None"
         ResizeMode="NoResize"
         AllowsTransparency="True"
         WindowStartupLocation="CenterScreen"
         FontFamily="{StaticResource NunitoSans_Regular}"
         DataContext="{StaticResource ImportBookVM}"
         Name="this">


    <Border CornerRadius="30"
            Background="White"
            BorderThickness="0.5"
            BorderBrush="Gray">

        <Grid>

            <Border Width="20"
                    CornerRadius="30,0,0,30"
                    Background="#0266FD"
                    HorizontalAlignment="Left" />

            <StackPanel Margin="32,15,56,0">

                <TextBlock Text="THÊM SÁCH MỚI"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#1B48BA" />
                <Grid Margin="0,32,0,0">
                    <TextBlock Text="Mã sách"
                               FontSize="18"
                               FontWeight="Bold" />
                    <TextBox Width="360"
                             HorizontalAlignment="Right" />
                </Grid>
                <Grid Margin="0,32,0,0">
                    <TextBlock Text="Tên sách"
                               FontSize="18"
                               FontWeight="Bold" />
                    <TextBox Width="360"
                             HorizontalAlignment="Right" />
                </Grid>
                <Grid Margin="0,32,0,0">
                    <TextBlock Text="Thể loại"
                               FontSize="18"
                               FontWeight="Bold" />
                    <ComboBox Width="360"
                              HorizontalAlignment="Right" />
                </Grid>
                <Grid Margin="0,32,0,0">
                    <TextBlock Text="Nhà xuất bản"
                               FontSize="18"
                               FontWeight="Bold" />
                    <TextBox Width="360"
                             HorizontalAlignment="Right" />
                </Grid>
                <Grid Margin="0,32,0,0">
                    <TextBlock Text="Năm xuất bản"
                               FontSize="18"
                               FontWeight="Bold" />
                    <TextBox Width="360"
                             HorizontalAlignment="Right" />
                </Grid>
                <Grid Margin="0,32,0,0">
                    <TextBlock Text="Trị giá"
                               FontSize="18"
                               FontWeight="Bold" />
                    <TextBox Width="360"
                             HorizontalAlignment="Right" />
                </Grid>
                <Grid Margin="0,32,0,0">
                    <TextBlock Text="Số lượng"
                               FontSize="18"
                               FontWeight="Bold" />
                    <TextBox Width="360"
                             HorizontalAlignment="Right" />
                </Grid>
                <Grid Margin="0,60,0,0"
                      Width="400">
                    <Button FontSize="20"
                            Width="160"
                            Height="51"
                            Background="Transparent"
                            Content="Huỷ bỏ"
                            Foreground="#0266FD"
                            BorderBrush="#0266FD"
                            materialDesign:ButtonAssist.CornerRadius="12"
                            HorizontalAlignment="Left"
                            Click="Button_Click" />
                    <Button FontSize="20"
                            Width="160"
                            Height="51"
                            Background="#0266FD"
                            Foreground="White"
                            Content="Hoàn thành"
                            materialDesign:ButtonAssist.CornerRadius="12"
                            HorizontalAlignment="Right"
                            Command="{Binding AddBookCM}"
                            CommandParameter="{Binding ElementName=this}" />
                </Grid>

            </StackPanel>

        </Grid>

    </Border>


</Window>
