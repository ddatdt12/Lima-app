<Page x:Class="LibraryManagement.Views.ImportBookPage.MainImportBookPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
      xmlns:cvt="clr-namespace:LibraryManagement.Views.Converter"
      mc:Ignorable="d"
      Height="800"
      Width="1128"
      DataContext="{StaticResource ImportBookVM}"
      FontFamily="{StaticResource NunitoSans_Regular}">

    <Page.Resources>
        <cvt:VnFormatConverter x:Key="VnFormatConverter" />
    </Page.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*" />
            <RowDefinition Height="93*" />
        </Grid.RowDefinitions>

        <!--HEADER-->
        <DockPanel Grid.Row="0">
            <TextBlock Text="Tiếp nhận sách"
                       FontSize="32"
                       FontWeight="Bold"
                       Margin="32 10 0 0"
                       Foreground="#1B48BA"
                       VerticalAlignment="Center" />
            <Button Width="145"
                    Height="42"
                    Margin="0,0,20,0"
                    Content="+ Thêm mới"
                    FontWeight="Bold"
                    FontSize="16"
                    Background="#0266FD"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    materialDesign:ButtonAssist.CornerRadius="12"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Command="{Binding OpenImportWindowCM}" />

        </DockPanel>

        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="726*" />
                <ColumnDefinition Width="370*" />
            </Grid.ColumnDefinitions>

            <!---LEFT-->
            <StackPanel Grid.Column="0">

                <materialDesign:Card UniformCornerRadius="4"
                                     BorderBrush="White"
                                     Background="White"
                                     Height="416"
                                     Width="724">
                    <StackPanel>
                        <Grid>
                            <TextBlock Text="Sách đang chọn"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Margin="10"
                                       Foreground="#1B48BA" />
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center">
                                <TextBlock Text="{Binding TotalQuantity,Mode=OneWay}" />
                                <TextBlock Text=" Sách"
                                           Margin="0,0,10,0" />
                            </StackPanel>
                        </Grid>
                        <Border CornerRadius="2"
                                BorderThickness="1"
                                BorderBrush="#BFBABA"
                                Margin="10">
                            <ListView x:Name="listview"
                                      ItemsSource="{Binding ImportBookList}"
                                      SelectedItem="{Binding SelectedItem}"
                                      Height="352"
                                      FontSize="16">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">

                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver"
                                                     Value="True">
                                                <Setter Property="Background"
                                                        Value="Transparent" />
                                            </Trigger>
                                            <Trigger Property="IsSelected"
                                                     Value="True">
                                                <Setter Property="Background"
                                                        Value="Transparent" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListView.ItemContainerStyle>

                                <ListView.View>
                                    <GridView>

                                        <GridViewColumn Header="Tên sách"
                                                        Width="200">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding book.baseBook.name}"
                                                               Margin="15,0,0,0"
                                                               TextTrimming="CharacterEllipsis"
                                                               ToolTip="{Binding book.baseBook.name}" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn Header="NXB"
                                                        Width="150">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding book.publisher}"
                                                               Margin="15,0,0,0"
                                                               TextTrimming="CharacterEllipsis"
                                                               ToolTip="{Binding book.publisher}" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn Header="Năm XB">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding book.yearOfPublication}"
                                                               Margin="15,0,0,0" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn Header="Số lượng">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Border Width="{Binding Width,ElementName=quantitybox}"
                                                            Height="30"
                                                            CornerRadius="5"
                                                            BorderThickness="1"
                                                            BorderBrush="#BFBABA"
                                                            Margin="15,0,0,0">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition />
                                                                <ColumnDefinition />
                                                            </Grid.ColumnDefinitions>

                                                            <!---QUANTITY-->

                                                            <TextBox Name="quantitybox"
                                                                     Grid.Column="0"
                                                                     Text="{Binding quantity,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                                     Style="{x:Null}"
                                                                     BorderThickness="0"
                                                                     Background="Transparent"
                                                                     Margin="5,5,5,0"
                                                                     TextChanged="quantitybox_TextChanged"
                                                                     PreviewTextInput="quantitybox_PreviewTextInput">
                                                                <i:Interaction.Triggers>
                                                                    <i:EventTrigger EventName="TextChanged">
                                                                        <i:InvokeCommandAction Command="{Binding ElementName=listview, Path=DataContext.QuantityChangedCM}"
                                                                                               CommandParameter="{Binding ElementName=quantitybox}" />
                                                                    </i:EventTrigger>
                                                                </i:Interaction.Triggers>
                                                            </TextBox>

                                                            <StackPanel Grid.Column="1">
                                                                <!--INCREASE-->
                                                                <Border CornerRadius="0 4 0 0"
                                                                        Width="32"
                                                                        Height="14"
                                                                        BorderThickness="1"
                                                                        BorderBrush="#0266FD"
                                                                        Background="#0266FD">
                                                                    <materialDesign:PackIcon Kind="MenuUp"
                                                                                             HorizontalAlignment="Center" />
                                                                    <i:Interaction.Triggers>
                                                                        <i:EventTrigger EventName="MouseLeftButtonUp">
                                                                            <i:InvokeCommandAction Command="{Binding ElementName=listview, Path=DataContext.IncreaseQuantityCM}" />
                                                                        </i:EventTrigger>
                                                                    </i:Interaction.Triggers>
                                                                </Border>
                                                                <!--DECREASE-->
                                                                <Border CornerRadius="0 0 4 0"
                                                                        Width="32"
                                                                        Height="14"
                                                                        BorderThickness="1"
                                                                        BorderBrush="#0266FD"
                                                                        Background="#0266FD">
                                                                    <materialDesign:PackIcon Kind="MenuDown"
                                                                                             HorizontalAlignment="Center" />
                                                                    <i:Interaction.Triggers>
                                                                        <i:EventTrigger EventName="MouseLeftButtonUp">
                                                                            <i:InvokeCommandAction Command="{Binding ElementName=listview, Path=DataContext.DecreaseQuantityCM}" />
                                                                        </i:EventTrigger>
                                                                    </i:Interaction.Triggers>
                                                                </Border>
                                                            </StackPanel>

                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn Header="Đơn giá">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBox Text="{Binding unitPrice,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                             PreviewTextInput="quantitybox_PreviewTextInput"
                                                             TextChanged="quantitybox_TextChanged"
                                                             Margin="15,0,0,0">
                                                        <i:Interaction.Triggers>
                                                            <i:EventTrigger EventName="TextChanged">
                                                                <i:InvokeCommandAction Command="{Binding ElementName=listview, Path=DataContext.PriceChangedCM}" />
                                                            </i:EventTrigger>
                                                        </i:Interaction.Triggers>
                                                    </TextBox>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn Header="Thành tiền">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding unitTotal}"
                                                               Margin="15,0,0,0" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn>
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Border Background="Transparent"
                                                            Width="30"
                                                            Height="30">
                                                        <materialDesign:PackIcon Kind="Delete"
                                                                                 Width="30"
                                                                                 Height="30"
                                                                                 Foreground="Red"
                                                                                 Cursor="Hand" />

                                                        <i:Interaction.Triggers>
                                                            <i:EventTrigger EventName="MouseLeftButtonUp">
                                                                <i:InvokeCommandAction Command="{Binding ElementName=listview, Path=DataContext.DeleteSelectedBookCM}" />
                                                            </i:EventTrigger>
                                                        </i:Interaction.Triggers>
                                                    </Border>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Border>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Width="724"
                                     Margin="0,20,0,0"
                                     Background="White"
                                     UniformCornerRadius="4"
                                     Height="282">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20*" />
                            <RowDefinition Height="80*" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0"
                                    Orientation="Horizontal">
                            <TextBlock Text="Danh sách sách"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#1B48BA"
                                       Margin="20,10,10,10" />
                            <StackPanel Orientation="Horizontal"
                                        Margin="210,0,0,0">
                                <materialDesign:PackIcon Kind="Search"
                                                         Width="25"
                                                         Height="25"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"
                                                         Foreground="#0266FD">
                                </materialDesign:PackIcon>
                                <TextBox FontSize="16"
                                         Width="273"
                                         Height="25"
                                         materialDesign:HintAssist.Hint="Tìm kiếm tên sách"
                                         materialDesign:HintAssist.IsFloating="False"
                                         Padding="0"
                                         BorderBrush="#0266FD"
                                         BorderThickness="0,0,0,1"
                                         TextChanged="TextBox_TextChanged"
                                         x:Name="searchBox">
                                </TextBox>
                                <Border VerticalAlignment="Center"
                                        x:Name="BtnImportWindow2">
                                    <materialDesign:PackIcon Kind="PlusCircleOutline"
                                                             Foreground="Green"
                                                             Width="25"
                                                             Height="25"
                                                             Cursor="Hand" />
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding OpenImportWindowCM2}"
                                                                   CommandParameter="{Binding ElementName=searchBox}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Border>
                            </StackPanel>
                        </StackPanel>

                        <Border BorderThickness="1"
                                Grid.Row="1"
                                BorderBrush="#BFBABA"
                                Margin="20,0,20,5"
                                CornerRadius="2">
                            <ListView Name="searchList">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Width="200">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding baseBook.name}"
                                                               TextTrimming="CharacterEllipsis"
                                                               ToolTip="{Binding baseBook.name}" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn Width="200">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding publisher}"
                                                               TextTrimming="CharacterEllipsis"
                                                               ToolTip="{Binding publisher}" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn>
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding yearOfPublication}" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn>
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Border Background="Transparent">
                                                        <materialDesign:PackIcon Kind="PlusThick"
                                                                                 Foreground="Green"
                                                                                 Cursor="Hand" />
                                                        <i:Interaction.Triggers>
                                                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                                                <i:InvokeCommandAction Command="{Binding ElementName=searchList, Path=DataContext.AddBookFromSearchCM}"
                                                                                       CommandParameter="{Binding ElementName=searchList}" />
                                                            </i:EventTrigger>
                                                        </i:Interaction.Triggers>
                                                    </Border>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Border>

                    </Grid>
                </materialDesign:Card>

            </StackPanel>

            <!---RIGHT-->
            <materialDesign:Card Grid.Column="1"
                                 Height="718"
                                 Background="White"
                                 UniformCornerRadius="4"
                                 VerticalAlignment="Top"
                                 Margin="6,0,10,0">
                <StackPanel Margin="10,0,10,0">
                    <TextBlock Text="Thông tin phiếu nhập sách"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#1B48BA"
                               Margin="10" />
                    <Grid>
                        <TextBlock Text="Mã phiếu"
                                   Foreground="#5C5959"
                                   FontSize="18"
                                   FontWeight="Bold" />
                        <TextBlock Text=""
                                   Foreground="#5C5959"
                                   FontSize="18"
                                   HorizontalAlignment="Right" />
                    </Grid>
                    <Grid Margin="0,30,0,0">
                        <TextBlock Text="Nhà cung cấp"
                                   Foreground="#5C5959"
                                   FontSize="18"
                                   FontWeight="Bold" />
                        <TextBox MinWidth="100"
                                 Foreground="#5C5959"
                                 FontSize="18"
                                 HorizontalAlignment="Right"
                                 Padding="0,0,0,-5"
                                 Text="{Binding Supplier,Mode=TwoWay}" />
                    </Grid>
                    <Grid Margin="0,30,0,0">
                        <TextBlock Text="Ngày nhập"
                                   Foreground="#5C5959"
                                   FontSize="18"
                                   FontWeight="Bold" />
                        <DatePicker SelectedDate="{Binding CreateAt,Mode=TwoWay}"
                                    Foreground="#5C5959"
                                    FontSize="18"
                                    Width="150"
                                    x:Name="createAt"
                                    HorizontalAlignment="Right" />

                    </Grid>
                    <Grid Margin="0,30,0,0">
                        <TextBlock Text="Tổng số lượng"
                                   Foreground="#5C5959"
                                   FontSize="18"
                                   FontWeight="Bold" />
                        <TextBlock Text="{Binding TotalQuantity,Mode=OneWay}"
                                   Foreground="#5C5959"
                                   FontSize="18"
                                   HorizontalAlignment="Right" />
                    </Grid>
                    <Grid Margin="0,30,0,0">
                        <TextBlock Text="Tổng tiền"
                                   Foreground="#5C5959"
                                   FontSize="18"
                                   FontWeight="Bold" />
                        <TextBlock Text="{Binding TotalReceiptPrice,Converter={StaticResource VnFormatConverter}}"
                                   Foreground="#5C5959"
                                   FontSize="18"
                                   HorizontalAlignment="Right" />
                    </Grid>
                    <Button Margin="0,100,0,0"
                            Content="Xác nhận"
                            FontSize="16"
                            FontWeight="Bold"
                            Width="145"
                            Height="42"
                            materialDesign:ButtonAssist.CornerRadius="12"
                            Background="#0266FD"
                            Command="{Binding ImportBookCM}" />
                </StackPanel>
            </materialDesign:Card>
        </Grid>
    </Grid>
</Page>
